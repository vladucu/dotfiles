{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

# Install asdf plugins

printf "${green}[50 - macOS] ${reset}"
{{- if or (lt 31 (atoi (env "SCRIPTS_START_AT"))) (env "SKIP_ASDF_PLUGINS") }}
echo "Skip installing asdf plugins"
exit 0
{{ else }}
echo "Install asdf plugins"
{{- end }}

{{ $plugins := dict
  "elixir"  "latest"
  "erlang"  "latest"
  "ruby"    "latest:2"
  "rust"    "latest"
}}

# Add plugins & install versions
{{ range (keys $plugins) -}}
  {{- $key := . }}
  {{- $val := get $plugins $key }}

  asdf plugin-add {{ $key }} || true

  {{- if not (eq $val "None") }}
    asdf install {{ $key }} {{ $val }} || true
    asdf global {{ $key }} {{ $val }} || true
  {{- end -}}
{{ end }}

# -- Packages -- #

{{ $rubyPackages := list
  "foreman"
}}

{{ range sortAlpha $rubyPackages }}
  gem install {{ . }}
{{ end -}}

ghq get https://github.com/elixir-lsp/elixir-ls
cd $GHQ_ROOT/github.com/elixir-lsp/elixir-ls
mix deps.get
mix compile
mix elixir_ls.release -o release

asdf reshim

{{ end -}}
