# Tmux completion
bind-key t run-shell 'tmux send-keys -t #{pane_id} "$(tmux-fzf-words)"'
bind-key T run-shell 'tmux send-keys -t #{pane_id} "$(tmux-fzf-words --all)"'

# Select pane
bind-key 0 run-shell "tmux-fzf-panes || :"

